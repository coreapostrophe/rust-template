{
  "name": "Rust Template",
  "runArgs": [
    "--name",
    "rust-template"
  ],
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "CARGO_TARGET_DIR": "/home/vscode/.cache/rust-template/target"
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "fill-labs.dependi",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "donjayamanne.githistory"
      ],
      "settings": {
        "rust-analyzer.checkOnSave.enable": true,
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.cargo.targetDir": "/home/vscode/.cache/fabulist/target",
        "rust-analyzer.cargo.extraEnv": {
          "CARGO_TARGET_DIR": "/home/vscode/.cache/fabulist/target"
        }
      }
    }
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/rust-template"
}